# rofi
bindsym $mod+d exec rofi -show run -lines 3 -eh 2 -width 100 -padding 460 -opacity "100" -bw 0

# lock screen                                                           ($mod+l)
bindsym $mod+l exec "scrot /tmp/i3lock.png && convert /tmp/i3lock.png -blur 0x8 /tmp/i3lock.png && i3lock -e -i /tmp/i3lock.png"

# wallpaper
exec --no-startup-id feh --bg-fill ~/Pictures/wallpapers/desert.jpg

# dual screen
exec --no-startup-id xrandr --output $(xrandr | grep " connected" | sed -n 2p | cut -d " " -f 1) --auto --above eDP-1-1

# compton
exec_always compton -f

# flux
exec --no-startup-id killall -q fluxgui
exec  --no-startup-id fluxgui

# disable touchpad
exec_always --no-startup-id xinput --disable $(xinput | grep Touchpad | cut -d'=' -f 2 | cut -c 1-2)

# network manager
exec nm-applet

# Return to last workspace
bindsym $mod+Tab workspace back_and_forth

